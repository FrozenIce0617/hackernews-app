
{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["dom", "ES2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": false,
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types", "@types"]
  },
  "exclude": [
    "node_modules",
    "e2e",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/*.json",
    "**/*.test.{ts,tsx}"
  ]
}
